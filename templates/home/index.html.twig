{% extends 'base.html.twig' %}
{% import "macros/user.html.twig" as userMacro %}
{% import "macros/ago.html.twig" as agoMacro %}
{% import 'macros/sharable.html.twig' as sharableMacro %}

{% block title %}Home{% endblock %}

{% block content %}


    <div class="jumbotron">
        <h1 class="display-5">{{ siteName }}</h1>
        
        <p class="lead">{{ siteDescription }}</p>

        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <h5>
            Hi {{ app.user.username }} !
        </h5>
        <p>
            You are currently visiting the home page of {{ siteName }}.
            This network allow you to share what are called <em>Sharables</em> with the other users.

            First thing to do is to <a href="{{ path('rule_index') }}">read the rules</a>.
            Next, you should check the <a href="{{ path('userclass') }}">user classes system</a>.

            <ul>

                <li>

                    {% if app.user.userClass.share %}
                    You can create sharables !
                    {% else %}
                    Your user class does not allow you to create sharables.
                    {% endif %}
                </li>
                <li>
                    {% if app.user.userClass.access %}

                    You can explore sharables using the <a href="{{ path('sharable') }}">list view</a> or trought the <a href="{{ path('sharable_map') }}">map</a>.
                    {% else %}
                    Your user class does not allow you to access sharables, but maybe some users have allowed some sharables to be accessibles by your user class.
                    {% endif %}
                </li>
            </ul>
        </p>
        {% endif %}
    </div>
{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
<div class="row">
    <div class="col">
        {% for manage in app.user.getUnconfirmedManages|reverse %}
        <div class="alert border border-primary">
            <a class="btn btn-primary mr-1" href="{{ path('sharable_show', {id: manage.sharable.id}) }}">
                <i class="fas fa-user-plus"></i>
            </a>
            You've been invited to manage {{ sharableMacro.render(manage.sharable) }}.
            <div class="btn-group">
                <a class="btn btn-secondary" href="{{ path('manage_confirm', {id: manage.id}) }}"><i class="fas fa-check"></i> confirm</a>
                <a class="btn btn-secondary" href="{{ path('manage_remove', {id: manage.id}) }}"><i class="fas fa-times"></i> refuse</a>
            </div>
            <small class="text-muted">{{ manage.createdAt|ago }}</small>
        </div>
        {% endfor %}
    </div>
</div>
{% endif %}



<div class="row">
    
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <style>
        .article img { max-width: 100%; }               
    </style>
    <div class="col-md-8">

        {% for announcement in announcementsPagination %}    

            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title d-flex justify-content-between align-items-center">
                        <span>
                            {{ announcement.title }}
                            <small>{{ agoMacro.render(announcement.publishedAt) }}</small>
                        </span>

                        <div class="btn-group">
                            {% if is_granted('edit', announcement) %}
                                <a href="{{ path('announcement_edit', {id: announcement.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                            {% endif %}
                            {% if is_granted('delete', announcement) %}
                                <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu">
                                    <a href="{{ path('announcement_delete', {id: announcement.id}) }}" class="dropdown-item bg-danger">
                                        <i class="fas fa-times-circle"></i> delete announcement
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </h5>
                </div>
                <div class="card-body article">
                    {{ announcement.article|markdown_to_html }}
                </div>
            </div>
            
        {% endfor %}

        <div class="navigation">
            {{ knp_pagination_render(announcementsPagination) }}
        </div>
        
    </div>
    {% endif %}



    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') or showHomeStats %}
    <div class="col-md-4">


        <div class="card mb-3">
            <div class="card-header">
                <h5 class="card-title">Currently active users</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    {% for user in activeUsers %}
                    <li class="list-group-item">
                        {{ userMacro.render(user) }}
                        </br>
                        <small class="text-muted">last seen {{ user.lastActivity|ago }}</small>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>


        <div class="card mb-3">
            <div class="card-header">

                <div class="card-title">
                <h5>Stats</h5>
                </div>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Sharables : {{ sharableCount }}
                    </li>
                    <li class="list-group-item">
                        Users : {{ userCount }}
                    </li>
                    <li class="list-group-item">
                        Validations : {{ validationCount }}
                    </li>
                    <li class="list-group-item">
                        Questions : {{ questionCount }}
                    </li>
                    <li class="list-group-item">
                        Users limit : {{ userLimit }}
                    </li>
                    <li class="list-group-item">
                        Registrations : {{ openRegistration ? 'open' : 'invite only' }}
                    </li>
                </ul>
            </div>
        </div>
        
    </div>
    {% endif %}

</div>




{% endblock %}
