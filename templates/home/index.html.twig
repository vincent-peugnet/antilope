{% extends 'base.html.twig' %}
{% import "macros/user.html.twig" as userMacro %}
{% import 'macros/sharable.html.twig' as sharableMacro %}

{% block title %}Home{% endblock %}

{% block content %}


<div class="row">

    <div class="col-lg-5">
        
        <h1 class="display-5">{{ siteName }}</h1>
        
        <p class="lead">{{ siteDescription }}</p>

        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <p>
            Hi {{ app.user.username }} !
        </p>
        {% endif %}
    </div>
    
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div class="col-lg-7 overflow-auto mb-3">
            {% for manage in app.user.getUnconfirmedManages|reverse %}
            <div class="alert border border-primary">
                <a class="btn btn-primary mr-1" href="{{ path('sharable_show', {id: manage.sharable.id}) }}">
                    <i class="fas fa-user-plus"></i>
                </a>
                You've been invited to manage {{ sharableMacro.render(manage.sharable) }}.
                <div class="btn-group">
                    <a class="btn btn-secondary" href="{{ path('manage_confirm', {id: manage.id}) }}"><i class="fas fa-check"></i> confirm</a>
                    <a class="btn btn-secondary" href="{{ path('manage_remove', {id: manage.id}) }}"><i class="fas fa-times"></i> refuse</a>
                </div>
                <small class="text-muted">{{ manage.createdAt|ago }}</small>
            </div>
            {% endfor %}
        </div>
    {% endif %}
</div>



<div class="row">
    
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <div class="col-md-8">


        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title">Currently active users</h3>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    {% for user in activeUsers %}
                    <li class="list-group-item">
                        {{ userMacro.render(user) }}
                        <small class="text-muted">last seen {{ user.lastActivity|ago }}</small>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        {% if is_granted('view', sharable) %}
        
        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title">
                    Last validations</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {% for validation in lastValidations %}
                        {% if is_granted('view', validation.sharable) %}
                        <li class="list-group-item">

                            {{ userMacro.render(validation.user, 1) }}
                            <i class="fas fa-check-circle"></i>
                            {{ sharableMacro.render(validation.sharable) }}

                            {% if validation.message %}
                                <div class="p-2 mt-2 bg-success rounded text-truncate">
                                    {{ validation.message }}
                                </div>
                            {% endif %}

                            <small class="text-muted">
                                {{ validation.sendAt|ago }}
                            </small>
                        </li>
                        {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            
        {% endif %}
        
    </div>
    {% endif %}



    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') or showHomeStats %}
    <div class="col-md-4">


        <div class="card mb-3">
            <div class="card-header">

                <div class="card-title">
                <h3>Stats</h3>
                </div>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Sharables : {{ sharableCount }}
                    </li>
                    <li class="list-group-item">
                        Users : {{ userCount }}
                    </li>
                    <li class="list-group-item">
                        Validations : {{ validationCount }}
                    </li>
                    <li class="list-group-item">
                        Questions : {{ questionCount }}
                    </li>
                    <li class="list-group-item">
                        Users limit : {{ userLimit }}
                    </li>
                    <li class="list-group-item">
                        Registrations : {{ openRegistration ? 'open' : 'invite only' }}
                    </li>
                </ul>
            </div>
        </div>
        
    </div>
    {% endif %}

</div>




{% endblock %}
