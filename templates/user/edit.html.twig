{% extends 'base.html.twig' %}

{% block title %}{{ 'profile edit'|trans|capitalize }}{% endblock %}


{% block content %}



{% import 'macros/breadcrumbs.html.twig' as breadcrumbs %}

{{ breadcrumbs.render([
    {'url': url('user'), 'text': 'users'|trans|capitalize },
    {'url': url('user_show', {id: user.id}), 'text': user.username},
    {'text': 'edit'|trans|capitalize },
]) }}


<h1>{{ 'profile edit'|trans|capitalize }}</h1>


{{ form_start(form) }}
    {{ form_errors(form) }}  
    {{ form_row(form.avatarFile) }}
    {{ form_row(form.description) }}

    <div class="alert alert-secondary">
        {{ 'Maximum parano√Øa level is defined by your current user class:'|trans }}
        <span class="badge bg-primary">{{ app.user.userClass.name }}</span>
    </div>


    {{ form_row(form.paranoia) }}
{{ form_end(form) }}

{% endblock %}

