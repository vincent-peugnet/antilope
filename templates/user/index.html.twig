{% extends 'base.html.twig' %}
{% import "macros/user.html.twig" as userMacro %}


{% block content %}

<div class="row">
    <div class="col-md-3">
        {{ form(form) }}
    </div>

    <div class="col-md-9">

        <div class="alert alert-info">
            {{ users|length }} users found
            {% if search.userClass %}
                that are
                <a href="{{ path('userclass_show', {id: search.userClass.id}) }}" class="badge badge-primary">
                    {{ search.userClass.name }}
                </a>
            {% endif %}
            {% if search.disabled %}
                including <span class="badge badge-danger"><i class="fas fa-ban"></i> disabled</span>
            {% endif %}
        </div>
        <div class="d-flex flex-wrap">
                {% for user in users %}
                <div class="card mb-3 mr-3" style="width: 320px;">

                    <div class="card-body d-flex">
                        {% if user.avatar %}
                            <a href="{{ path('user_show', {id: user.id}) }}">
                                <img class="rounded" src="{{ asset(user.getAvatarPath)|imagine_filter('avatar_100') }}" alt="avatar of user {{ user.username }}">
                            </a>
                        {% endif %}
                        <div class="ml-3">
                            <h5>
                                <a href="{{ path('user_show', {id: user.id}) }}">
                                    {{ user.username }}
                                </a>
                                {% if user.isDisabled %}
                                <span class="badge badge-danger" title="This user is disabled"><i class="fas fa-ban"></i></span>
                                {% endif %}
                            </h5>
                            <a class="badge badge-primary" href="{{ path('userclass_show', {id: user.userClass.id}) }}">
                                {{ user.userClass.name }}
                            </a>
                            <span class="badge badge-light">{{ user.shareScore }}</span>
                            </br>
                            <small class="text-muted">
                                joined {{ user.createdAt|ago }}
                            </small>
                        </div>                    
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


</div>

{% endblock %}